---
import features from "../../data/features.json";
import Status from "../status/Status.astro";
---

<h1 class="text-center font-bold text-5xl mt-10">Features</h1>
<ul class="grid sm:grid-cols-2 xl:grid-cols-3 gap-3 p-5">
  {
    features.map((feature) => (
      <li class="w-full md:h-auto bg-slate-800/30 hover:bg-transparent transition-colors duration-500 rounded-xl relative overflow-hidden group">
        <a href={feature.url} target="_blank" class="">
          <div class="p-5 mb-8 flex gap-5 items-center sm:grid">
            <img
              src={feature.img}
              alt=""
              class="h-16 md:h-40 mx-auto mb-0 md:mb-3"
            />
            <div>
              <h2 class="text-orange-500 text-xl text-center font-bold">
                {feature.title}
              </h2>
              <p class="text-justify overflow-y-auto">{feature.description}</p>
            </div>
          </div>
          <Status data={JSON.stringify(feature)} />
        </a>
      </li>
    ))
  }
</ul>
