---
import projects from "../../data/projects.json";
import Status from "../status/Status.astro";
---

<section>
  <h1 class="text-center font-bold text-3xl 2xl:text-4xl my-5">Projects</h1>
  <ul class="grid sm:grid-cols-2 xl:grid-cols-3 gap-3 px-5">
    {
      projects.map((project) => (
        <li class="w-full md:h-auto bg-slate-800/30 hover:bg-transparent transition-colors duration-500 rounded-xl relative overflow-hidden group">
          <a href={project.url} target="_blank" class="">
            <div class="p-5 mb-8 flex gap-5 sm:gap-2 2xl:gap-5 items-center sm:grid">
              <img
                src={project.img}
                alt=""
                class="h-16 lg:h-20 2xl:h-28 mx-auto mb-0 md:mb-0"
              />
              <div>
                <h2 class="text-orange-500 text-xl text-center font-bold">
                  {project.title}
                </h2>
                <p class="text-justify overflow-y-auto">
                  {project.description}
                </p>
              </div>
            </div>
            <Status data={JSON.stringify(project)} />
          </a>
        </li>
      ))
    }
  </ul>
</section>
