---
import skills from "../../data/skills.json";
import Bar from "../bar/Bar.astro";
---

<section>
  <h1 class="text-3xl 2xl:text-4xl font-bold text-center my-5">Skills</h1>
  <ul
    class="grid grid-cols-2 gap-3 sm:grid-cols-3 lg:grid-cols-4 2xl:grid-cols-5 px-5"
  >
    {
      skills.map((skill) => (
        <li class="bg-slate-800/30 hover:bg-transparent transition-colors duration-500 rounded-md overflow-hidden">
          <img
            src={skill.img}
            alt="yo habia ponido una imagen aqui"
            class="w-20 mx-auto mt-2"
          />
          <Bar data={JSON.stringify(skill)} />
        </li>
      ))
    }
  </ul>
</section>
